<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    app:cardCornerRadius="5dp"
    app:cardUseCompatPadding="true"
    app:cardElevation="1dp"
    android:layout_height="200dp">

    <RelativeLayout
        android:id="@+id/allbusiness_item_rl"
        android:layout_width="match_parent"
        android:layout_height="200dp">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/allbusiness_item_ima"
            android:scaleType="centerCrop"/>

        <FrameLayout
            android:id="@+id/allbusiness_item_fr"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <RelativeLayout
                android:layout_width="match_parent"
                android:paddingLeft="5dp"
                android:layout_height="match_parent">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_marginBottom="15dp"
                    android:orientation="vertical">
                <TextView
                    android:id="@+id/allbusiness_item_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/dimen_25_dip"
                    android:gravity="center_vertical"
                    android:text="@string/rb_str_all"
                    android:padding="5dp"
                    android:textStyle="italic|bold"
                    android:textColor="@color/titlestr"
                    />
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="5dp">
                    <ImageView
                        android:id="@+id/allbusiness_item_loc"
                        android:layout_width="13dp"
                        android:layout_height="16dp"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="5dp"
                        android:background="@mipmap/loc_03"/>

                    <TextView
                        android:id="@+id/allbusiness_item_address"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:layout_toRightOf="@id/allbusiness_item_loc"
                        android:layout_centerVertical="true"
                        android:textColor="@color/titlestr"
                        android:textStyle="bold"
                        android:maxEms="15"
                        android:maxLines="1"
                        android:ellipsize="middle"
                        android:text="@string/rb_str_favorable"/>



                    <ImageView
                        android:id="@+id/allbusiness_item_dis"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="5dp"
                        android:layout_marginBottom="5dp"
                        android:visibility="gone"
                        android:background="@mipmap/yh"/>
                </RelativeLayout>
                </LinearLayout>
            </RelativeLayout>

        </FrameLayout>
    </RelativeLayout>
</android.support.v7.widget.CardView>
