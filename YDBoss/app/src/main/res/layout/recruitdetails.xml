<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/recruitlistitem_rl_title"
        android:layout_marginLeft="1dp"
        android:layout_marginRight="1dp">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scrollbars="none">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical" >

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/lineback"
                    android:paddingBottom="10dp"
                    android:paddingLeft="5dp"
                    android:paddingRight="5dp"
                    android:paddingTop="10dp" >

                    <TextView
                        android:id="@+id/recruitlistitemdetails_tv_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_marginLeft="10dp"
                        android:text="健身教练"
                        android:textColor="#333333"
                        android:maxLines="2"
                        android:maxEms="20"
                        android:textSize="@dimen/dimen_23_dip" />

                    <TextView android:id="@+id/recruitlistitemdetails_tv_kind"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toRightOf="@+id/recruitlistitemdetails_tv_name"
                        android:layout_marginLeft="5dp"
                        android:layout_alignTop="@+id/recruitlistitemdetails_tv_name"
                        android:layout_alignBottom="@+id/recruitlistitemdetails_tv_name"
                        android:gravity="center"
                        android:textSize="@dimen/dimen_20_dip"
                        android:textColor="#999999"
                        android:text="(健身教练)"/>

                    <TextView
                        android:id="@+id/recruitlistitemdetails_tv_salary"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="10dp"
                        android:layout_marginTop="10dp"
                        android:text="3000-5000"
                        android:textColor="#ff8c00"
                        android:textSize="@dimen/dimen_20_dip"/>

                    <TextView
                        android:id="@+id/recruitlistitemdetails_tv_bname"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignLeft="@+id/recruitlistitemdetails_tv_name"
                        android:layout_below="@+id/recruitlistitemdetails_tv_name"
                        android:layout_marginTop="10dp"
                        android:text="成都万锦科技"
                        android:textColor="#999999"
                        android:textSize="@dimen/dimen_18_dip" />


                    <TextView
                        android:id="@+id/recruitlistitemdetails_tv_nature"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignLeft="@+id/recruitlistitemdetails_tv_bname"
                        android:layout_below="@+id/recruitlistitemdetails_tv_bname"
                        android:layout_marginTop="10dp"
                        android:text="全职"
                        android:textColor="#999999"
                        android:textSize="@dimen/dimen_16_dip" />

                    <View
                        android:id="@+id/recruitlistitemdetails_line_01"
                        android:layout_width="1dp"
                        android:layout_height="wrap_content"
                        android:layout_alignBottom="@+id/recruitlistitemdetails_tv_nature"
                        android:layout_alignTop="@+id/recruitlistitemdetails_tv_nature"
                        android:layout_marginLeft="10dp"
                        android:layout_toRightOf="@+id/recruitlistitemdetails_tv_nature"
                        android:background="#999999" />

                    <TextView
                        android:id="@+id/recruitlistitemdetails_tv_sex"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignBottom="@+id/recruitlistitemdetails_tv_nature"
                        android:layout_alignTop="@+id/recruitlistitemdetails_tv_nature"
                        android:layout_below="@+id/recruitlistitemdetails_tv_bname"
                        android:layout_marginLeft="10dp"
                        android:layout_toRightOf="@+id/recruitlistitemdetails_line_01"
                        android:text="性别不限"
                        android:textColor="#999999"
                        android:textSize="@dimen/dimen_16_dip" />

                    <View
                        android:id="@+id/recruitlistitemdetails_line_02"
                        android:layout_width="1dp"
                        android:layout_height="wrap_content"
                        android:layout_alignBottom="@+id/recruitlistitemdetails_tv_nature"
                        android:layout_alignTop="@+id/recruitlistitemdetails_tv_nature"
                        android:layout_marginLeft="10dp"
                        android:layout_toRightOf="@+id/recruitlistitemdetails_tv_sex"
                        android:background="#999999" />

                    <TextView
                        android:id="@+id/recruitlistitemdetails_tv_edu"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignBottom="@+id/recruitlistitemdetails_tv_nature"
                        android:layout_alignTop="@+id/recruitlistitemdetails_tv_nature"
                        android:layout_below="@+id/recruitlistitemdetails_tv_bname"
                        android:layout_marginLeft="10dp"
                        android:layout_toRightOf="@+id/recruitlistitemdetails_line_02"
                        android:text="学历不限"
                        android:textColor="#999999"
                        android:textSize="@dimen/dimen_16_dip" />

                    <View
                        android:id="@+id/recruitlistitemdetails_line_03"
                        android:layout_width="1dp"
                        android:layout_height="wrap_content"
                        android:layout_alignBottom="@+id/recruitlistitemdetails_tv_nature"
                        android:layout_alignTop="@+id/recruitlistitemdetails_tv_nature"
                        android:layout_marginLeft="10dp"
                        android:layout_toRightOf="@+id/recruitlistitemdetails_tv_edu"
                        android:background="#999999" />

                    <TextView
                        android:id="@+id/recruitlistitemdetails_tv_num"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignBottom="@+id/recruitlistitemdetails_tv_nature"
                        android:layout_alignTop="@+id/recruitlistitemdetails_tv_nature"
                        android:layout_below="@+id/recruitlistitemdetails_tv_bname"
                        android:layout_marginLeft="10dp"
                        android:layout_toRightOf="@+id/recruitlistitemdetails_line_03"
                        android:text="3人"
                        android:textColor="#999999"
                        android:textSize="@dimen/dimen_16_dip" />

                    <View
                        android:id="@+id/recruitlistitemdetails_line_09"
                        android:layout_width="1dp"
                        android:layout_height="wrap_content"
                        android:layout_alignBottom="@+id/recruitlistitemdetails_tv_nature"
                        android:layout_alignTop="@+id/recruitlistitemdetails_tv_nature"
                        android:layout_marginLeft="10dp"
                        android:layout_toRightOf="@+id/recruitlistitemdetails_tv_num"
                        android:background="#999999" />

                    <TextView
                        android:id="@+id/recruitlistitemdetails_tv_exp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignBottom="@+id/recruitlistitemdetails_tv_nature"
                        android:layout_alignTop="@+id/recruitlistitemdetails_tv_nature"
                        android:layout_below="@+id/recruitlistitemdetails_tv_bname"
                        android:layout_marginLeft="10dp"
                        android:layout_toRightOf="@+id/recruitlistitemdetails_line_09"
                        android:text="经验不限"
                        android:textColor="#999999"
                        android:textSize="@dimen/dimen_16_dip" />

                    <View
                        android:id="@+id/recruitlistitemdetails_line_04"
                        android:layout_width="match_parent"
                        android:layout_height="0.8dp"
                        android:layout_alignLeft="@+id/recruitlistitemdetails_tv_nature"
                        android:layout_alignRight="@+id/recruitlistitemdetails_tv_salary"
                        android:layout_below="@+id/recruitlistitemdetails_tv_nature"
                        android:layout_marginTop="10dp"
                        android:background="#999999" />

                    <ImageView
                        android:id="@+id/recruitlistitemdetails_ima_address"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignLeft="@+id/recruitlistitemdetails_tv_nature"
                        android:layout_below="@+id/recruitlistitemdetails_line_04"
                        android:layout_marginTop="10dp"
                        android:background="@mipmap/loc_03" />

                    <TextView
                        android:id="@+id/recruitlistitemdetails_tv_address"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignTop="@+id/recruitlistitemdetails_ima_address"
                        android:layout_below="@+id/recruitlistitemdetails_line_04"
                        android:layout_marginLeft="15dp"
                        android:layout_toRightOf="@+id/recruitlistitemdetails_ima_address"
                        android:text="奧克斯广场C座1604"
                        android:textColor="#333333"
                        android:textSize="@dimen/dimen_16_dip" />
                </RelativeLayout>

                <View
                    android:id="@+id/recruitlistitemdetails_line_05"
                    android:layout_width="match_parent"
                    android:layout_height="5dp"
                    android:background="#fff" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/lineback"
                    android:paddingBottom="10dp"
                    android:paddingLeft="5dp"
                    android:paddingRight="5dp"
                    android:paddingTop="10dp" >

                    <TextView
                        android:id="@+id/recruitlistitemdetails_tv_responsibilities"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_marginLeft="10dp"
                        android:text="岗位职责"
                        android:textColor="#ff8c00"
                        android:textSize="@dimen/dimen_25_dip" />

                    <View
                        android:id="@+id/recruitlistitemdetails_line_06"
                        android:layout_width="match_parent"
                        android:layout_height="0.8dp"
                        android:layout_alignLeft="@+id/recruitlistitemdetails_tv_responsibilities"
                        android:layout_below="@+id/recruitlistitemdetails_tv_responsibilities"
                        android:layout_marginRight="10dp"
                        android:layout_marginTop="10dp"
                        android:background="#999999" />

                    <TextView
                        android:id="@+id/recruitlistitemdetails_tv_responsibilities_details"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_below="@+id/recruitlistitemdetails_line_06"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:layout_marginTop="10dp"
                        android:text="岗位职责"
                        android:textColor="#999999"
                        android:textSize="@dimen/dimen_17_dip" />
                </RelativeLayout>

                <View
                    android:id="@+id/recruitlistitemdetails_line_07"
                    android:layout_width="match_parent"
                    android:layout_height="5dp"
                    android:background="#fff" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/lineback"
                    android:paddingBottom="10dp"
                    android:paddingLeft="5dp"
                    android:paddingRight="5dp"
                    android:paddingTop="10dp" >

                    <TextView
                        android:id="@+id/recruitlistitemdetails_tv_requirements"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_marginLeft="10dp"
                        android:text="职位要求"
                        android:textColor="#ff8c00"
                        android:textSize="@dimen/dimen_25_dip" />

                    <View
                        android:id="@+id/recruitlistitemdetails_line_08"
                        android:layout_width="match_parent"
                        android:layout_height="0.8dp"
                        android:layout_alignLeft="@+id/recruitlistitemdetails_tv_requirements"
                        android:layout_below="@+id/recruitlistitemdetails_tv_requirements"
                        android:layout_marginRight="10dp"
                        android:layout_marginTop="10dp"
                        android:background="#999999" />

                    <TextView
                        android:id="@+id/recruitlistitemdetails_tv_requirementsdetails"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignLeft="@+id/recruitlistitemdetails_tv_requirements"
                        android:layout_below="@+id/recruitlistitemdetails_line_08"
                        android:layout_marginRight="10dp"
                        android:layout_marginTop="10dp"
                        android:text="职位要求"
                        android:textColor="#999999"
                        android:textSize="@dimen/dimen_17_dip" />
                </RelativeLayout>
            </LinearLayout>
        </ScrollView>
    </RelativeLayout>
</LinearLayout>
