<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ededed">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#fff"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/coachlessonitemdetails_lesson_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:padding="10dp"
                android:textColor="#333333"
                android:text="课程价格"
                android:textSize="@dimen/dimen_20_dip" />

            <TextView
                android:id="@+id/coachlessonitemdetails_lesson_original_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:padding="10dp"
                android:text="课程原价"
                android:textColor="#999999"
                android:textSize="@dimen/dimen_18_dip" />
        </LinearLayout>

        <TextView
            android:id="@+id/coachlessonitemdetails_lesson_hours"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:background="#fff"
            android:padding="10dp"
            android:text="使用时间"
            android:textColor="#333333"
            android:textSize="@dimen/dimen_20_dip" />

        <TextView
            android:id="@+id/coachlessonitemdetails_lesson_c_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:background="#fff"
            android:padding="10dp"
            android:text="教练名称"
            android:textColor="#333333"
            android:textSize="@dimen/dimen_20_dip" />

        <TextView
            android:id="@+id/coachlessonitemdetails_lesson_explain"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#fff"
            android:padding="10dp"
            android:text="购买说明"
            android:textColor="#333333"
            android:textSize="@dimen/dimen_20_dip" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="#fff" >

            <ImageView
                android:id="@+id/coachlessondetails_ima1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:background="@mipmap/ima" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginTop="2dp"
                android:layout_toRightOf="@+id/coachlessondetails_ima1"
                android:padding="8dp"
                android:text="课程详情"
                android:textColor="#333333"
                android:textSize="@dimen/dimen_22_dip" />
        </RelativeLayout>
<ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:scrollbars="none">
        <TextView
            android:id="@+id/coachlessonitemdetails_lesson_details"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#fff"
            android:padding="10dp"
            android:textColor="#333333"
            android:text="课程详情"
            android:textSize="@dimen/dimen_20_dip" />
</ScrollView>
    </LinearLayout>
</LinearLayout>
