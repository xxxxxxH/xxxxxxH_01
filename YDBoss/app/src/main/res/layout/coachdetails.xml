<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <RelativeLayout
        android:id="@+id/coachcoach"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/coachdetails_rl_title">

        <RelativeLayout
            android:id="@+id/coachdetails_rl"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@mipmap/coach_bg"
            android:gravity="center" >

            <ImageView
                android:id="@+id/coachdetails_ima"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_centerHorizontal="true"
                android:scaleType="fitXY" />

            <TextView
                android:id="@+id/coach_tv_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/coachdetails_ima"
                android:layout_margin="5dp"
                android:gravity="center"
                android:text="教练名称"
                android:textColor="#fff"
                android:textSize="@dimen/dimen_23_dip" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/coach_tv_name"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/coach_tv_sex"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:layout_marginLeft="15dp"
                    android:layout_weight="1"
                    android:gravity="right"
                    android:paddingLeft="0dp"
                    android:paddingRight="10dp"
                    android:text="性别："
                    android:textColor="#fff"
                    android:textSize="@dimen/dimen_20_dip" />

                <View
                    android:layout_width="10dp"
                    android:layout_height="1dp" />

                <TextView
                    android:id="@+id/coach_tv_workyear"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:layout_marginRight="15dp"
                    android:layout_weight="1"
                    android:gravity="left"
                    android:paddingLeft="10dp"
                    android:paddingRight="0dp"
                    android:text="工作时间："
                    android:textColor="#fff"
                    android:textSize="@dimen/dimen_20_dip" />
            </LinearLayout>
        </RelativeLayout>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/coachdetails_rl"
            android:layout_marginBottom="10dp"
            android:scrollbars="none" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/coach_tv_belong"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#fff"
                    android:padding="15dp"
                    android:text="所属场馆："
                    android:textColor="#333333"
                    android:textSize="@dimen/dimen_20_dip" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="10dp"
                    android:background="#ededed"/>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:background="#fff" >

                    <ImageView
                        android:id="@+id/coachdetails_ima1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:background="@mipmap/ima" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_toRightOf="@+id/coachdetails_ima1"
                        android:padding="10dp"
                        android:text="教练格言"
                        android:textColor="#333333"
                        android:textSize="@dimen/dimen_20_dip" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#fff" >

                    <TextView
                        android:id="@+id/coach_tv_geyan"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingBottom="5dp"
                        android:paddingLeft="12dp"
                        android:paddingRight="10dp"
                        android:paddingTop="2dp"
                        android:text="教练格言asdasd"
                        android:textColor="#333333"
                        android:textSize="@dimen/dimen_18_dip" />
                </RelativeLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="10dp"
                    android:background="#ededed"/>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:background="#fff" >

                    <ImageView
                        android:id="@+id/coachdetails_ima2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:background="@mipmap/ima" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_toRightOf="@+id/coachdetails_ima2"
                        android:padding="10dp"
                        android:text="教练详情"
                        android:textColor="#333333"
                        android:textSize="@dimen/dimen_20_dip" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="#fff" >

                    <TextView
                        android:id="@+id/coach_tv_details"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingBottom="5dp"
                        android:paddingLeft="12dp"
                        android:paddingRight="10dp"
                        android:paddingTop="2dp"
                        android:text="教练详情"
                        android:textColor="#333333"
                        android:textSize="@dimen/dimen_18_dip" />
                </RelativeLayout>

                <Button
                    android:id="@+id/coach_btn"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="15dp"
                    android:background="@mipmap/btn"
                    android:gravity="center"
                    android:text="我的课程"
                    android:textColor="#fff"
                    android:textSize="@dimen/dimen_20_dip" />
            </LinearLayout>
        </ScrollView>
    </RelativeLayout>



</LinearLayout>
