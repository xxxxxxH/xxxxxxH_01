<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#ededed"
    android:orientation="vertical"
    android:padding="10dp">


        <TextView
            android:id="@+id/coachlessonitem_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#333333"
            android:gravity="center"
            android:text="课程名称："
            android:textSize="@dimen/dimen_20_dip" />

        <TextView
            android:id="@+id/coachlessonitem_price"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="5dp"
            android:layout_below="@+id/coachlessonitem_name"
            android:gravity="center"
            android:text="课程价格："
            android:textColor="#333333"
            android:textSize="@dimen/dimen_19_dip" />


        <TextView
            android:id="@+id/coachlessonitem_original_price"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="5dp"
            android:textColor="#333333"
            android:layout_below="@+id/coachlessonitem_price"
            android:gravity="center"
            android:text="课程原价："
            android:textSize="@dimen/dimen_18_dip" />

</RelativeLayout>
