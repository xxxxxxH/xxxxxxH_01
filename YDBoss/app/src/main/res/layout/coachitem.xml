<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <ImageView
        android:id="@+id/coach_ima"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_centerVertical="true"
        android:layout_margin="10dp"
        android:scaleType="centerCrop" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/coach_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/coach_ima"
            android:text="教练名称："
            android:layout_weight="1"
            android:padding="10dp"
            android:textSize="@dimen/dimen_22_dip" />

        <LinearLayout
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/coach_sex"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="性别："
                android:textColor="#999999"
                android:textSize="@dimen/dimen_20_dip" />

            <TextView
                android:id="@+id/coach_workyear"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/coach_sex"
                android:layout_weight="1"
                android:textColor="#999999"
                android:text="工作年限："
                android:textSize="@dimen/dimen_20_dip" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
